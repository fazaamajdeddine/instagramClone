
<div class="bg-grey-lighter min-h-screen flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
            <%= image_tag(resource.avatar_thumbnail, class:"rounded-full h-24 w-24 items-center justify-center") if resource.avatar.attached? %>
        </div>

        <div class="field">
          <%= f.file_field :avatar %>
        </div>

        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"Username..."  %>
        </div>

        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name,  class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"First name" %>
        </div>

        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"Last name" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password",class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"Password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"confirm Password"  %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"current Password"  %>
        </div>
          <div class="mx-10 field">
 
          </div>

        <div class="actions">
        <button type="submit" class="w-full text-center py-3 rounded bg-green text-white hover:bg-green-dark focus:outline-none my-1" >
          <%= f.submit "Update", class: "w-full py-3 mt-10 bg-blue-500 rounded-sm font-medium text-white uppercase" %>
        </button>
        </div>
      <% end %>

      

      <p>Unhappy? <%= button_to "Cancel my user", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>