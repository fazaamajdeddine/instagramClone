<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
  <div class="flex flex-wrap items-center justify-between md:justify-around">
    
      <!-- logo -->
        <a href=<%= authenticated_root_path %> class="text-lg font-semibold tracking-widest text-gray-900 uppercase rounded-lg dark-mode:text-white focus:outline-none focus:shadow-outline" ><%= image_tag "logo.png", width: "150px", class: "p-4" %></a>

      <!-- search-->
      <div class="relative hidden sm:block text-gray-500">
        <%= form_with url: search_path, method: :get, local: true do |form| %>
        <%= form.text_field :query, value: params[:query], placeholder: "Search", autocomplete: :off, class:"search-bar max-w-xs border rounded bg-gray-200 px-4 text-center outline-none focus:border-gray-400", type:"search", required: true %>
        <i class="fa fa-search absolute top-0 left-0 ml-12 mt-1"></i>
        <% end %>
      </div>

      <div class="flex items-center space-x-4 ">
        <a class="mr-6"> <%= link_to authenticated_root_path do %>
        <svg aria-label="Home" class="_8-yf5 " fill="#262626" height="22" viewBox="0 0 48 48" width="22"><path d="M45.5 48H30.1c-.8 0-1.5-.7-1.5-1.5V34.2c0-2.6-2.1-4.6-4.6-4.6s-4.6 2.1-4.6 4.6v12.3c0 .8-.7 1.5-1.5 1.5H2.5c-.8 0-1.5-.7-1.5-1.5V23c0-.4.2-.8.4-1.1L22.9.4c.6-.6 1.6-.6 2.1 0l21.5 21.5c.3.3.4.7.4 1.1v23.5c.1.8-.6 1.5-1.4 1.5z"></path></svg>
        <% end %>
        </a>
        <a class="mr-6"> <%= link_to profile_path(current_user.username) do  %>
          <%= image_tag(current_user.avatar_thumbnail,class:"rounded-full h-10 w-10 border-2 border-pink-600 p-1 items-center justify-center")  %>
          <% end %>
        </a>
        <a class="mr-6"> <%= link_to conversations_path do %> 
        <svg aria-label="Direct" class="_8-yf5 " fill="#262626" height="22" viewBox="0 0 48 48" width="22"><path d="M47.8 3.8c-.3-.5-.8-.8-1.3-.8h-45C.9 3.1.3 3.5.1 4S0 5.2.4 5.7l15.9 15.6 5.5 22.6c.1.6.6 1 1.2 1.1h.2c.5 0 1-.3 1.3-.7l23.2-39c.4-.4.4-1 .1-1.5zM5.2 6.1h35.5L18 18.7 5.2 6.1zm18.7 33.6l-4.4-18.4L42.4 8.6 23.9 39.7z"></path></svg>
        <% end %>
        </a>
        <a class="mr-6"> <%= link_to new_post_path do %>
        <i class="fas fa-plus-square"></i>
        <% end %>
        </a>
        <a class="mr-6"> <%= link_to "log out", destroy_user_session_path, method: :delete, class:"inline-block bg-blue-500 px-2 py-1 text-white font-semibold text-sm rounded" %></a>
      </div>
  </div>








